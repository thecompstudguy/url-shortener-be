### Ping Utility
GET {{host}}/v1/utils/ping
Accept: application/json

> {%
  client.test("Request executed successfully", function() {
    client.assert(response.status === 200, "Response status is not 200");
  });

  client.test("Response body contains Pong", function() {
    client.assert(response.body.data.message === "Pong", "Response message is not Pong");
  });
%}

### URL Shortener
GET https://fakerapi.it/api/v1/custom?_quantity=1&url=url
Accept: application/json

> {%
  client.global.set("random_url", response.body.data[0].url);
%}

###
POST {{host}}/v1/url-shortener
Content-Type: application/json

{
  "url": "{{random_url}}"
}

> {%
  client.test("Request executed successfully", function() {
    client.assert(response.status === 200, "Response status is not 200");
  });

  client.test("Response status is success", function() {
    client.assert(response.body.status === "success", "Response status is not success");
  });
%}
